{
    "extends": "@tsconfig/node-lts/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@controllers/*": ["./src/controllers/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@typings/*": ["src/typings/*"],
            "@middlewares/*": ["./src/middlewares/*"],
            "@responses/*": ["./src/responses/*"],
            "@routes/*": ["./src/routes/*"]
        }
    }
}
